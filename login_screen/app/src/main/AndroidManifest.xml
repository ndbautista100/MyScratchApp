<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.scratchappfeature">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.scratchappfeature"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".CreateProfileActivity"
            android:exported="false"
            android:label="Create Profile" />
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="Settings"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.scratchappfeature.NoActionBar"/>
        <activity
            android:name=".EditProfilePage"
            android:exported="false"
            android:label="Edit Profile"
            android:parentActivityName=".ProfilePage"
            android:theme="@style/Theme.scratchappfeature.NoActionBar" />
        <activity
            android:name=".ProfilePage"
            android:exported="false"
            android:label="My Profile"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.scratchappfeature.NoActionBar" />
        <activity
            android:name=".SearchableActivity"
            android:exported="false"
            android:label="Search"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.scratchappfeature.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".EditRecipeActivity"
            android:exported="false"
            android:label="Edit Recipe"
            android:theme="@style/Theme.scratchappfeature.NoActionBar" />
        <activity
            android:name=".RecipePageActivity"
            android:exported="true"
            android:label="Recipe Name"
            android:parentActivityName=".ScratchNotesActivity"
            android:theme="@style/Theme.scratchappfeature.NoActionBar" />
        <activity
            android:name=".CreateRecipeActivity"
            android:exported="true"
            android:label="Create Recipe"
            android:parentActivityName=".ScratchNotesActivity"
            android:theme="@style/Theme.scratchappfeature.NoActionBar" />
        <activity
            android:name=".ScratchNotesActivity"
            android:exported="true"
            android:label="Scratch Notes"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.scratchappfeature.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:parentActivityName=".Login"
            android:theme="@style/Theme.scratchappfeature.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="myscratch.page.link"
                    android:scheme="https" />
                <data
                    android:host="myscratch.page.link"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddVideoActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.scratchappfeature.NoActionBar" />
        <activity
            android:name=".Register"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.scratchappfeature.NoActionBar" />
        <activity
            android:name=".ExploreActivity"
            android:exported="true"
            android:label="Explore"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.scratchappfeature.NoActionBar" />
        <activity
            android:name=".ExploreActivity_Revamp"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.scratchappfeature.NoActionBar" />
        <activity
            android:name=".CustomizeRecipeFeature"
            android:exported="true"
            android:label="My Scratch!"
            android:parentActivityName=".CreateRecipeActivity"
            android:theme="@style/Theme.scratchappfeature.NoActionBar"/>
        <activity
            android:name=".Login"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.scratchappfeature.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>