<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/feedCardRecipeImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/feedRecipeNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/feedCardRecipeImageView"
            android:text="Recipe Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/feedRecipeDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feedRecipeNameTextView"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/feedCardRecipeImageView"
            android:text="Description"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/feedUserTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/feedRecipeNameTextView"
            android:layout_alignParentEnd="true"
            android:text="User"
            android:textSize="15sp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>