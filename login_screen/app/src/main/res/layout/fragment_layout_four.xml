<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFCECE"
    android:paddingVertical="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/layoutTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_view_background_gray"
            android:gravity="center"
            android:paddingHorizontal="96dp"
            android:paddingVertical="8dp"
            android:text="Title"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/layoutToolsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/text_view_background_gray"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Tools"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@id/layoutIngredientsTextView"
            app:layout_constraintEnd_toStartOf="@id/layoutInstructionsTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutTitleTextView"

            />

        <TextView
            android:id="@+id/layoutIngredientsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/text_view_background_gray"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Ingredients"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@id/layoutPhotosTextView"
            app:layout_constraintEnd_toStartOf="@id/layoutInstructionsTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutToolsTextView" />


        <TextView
            android:id="@+id/layoutPhotosTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:background="@drawable/text_view_background_gray"
            android:paddingHorizontal="36dp"
            android:paddingVertical="36dp"
            android:text="Photos"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/layoutInstructionsTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutIngredientsTextView"


            />

        <TextView
            android:id="@+id/layoutInstructionsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/text_view_background_gray"
            android:paddingHorizontal="40dp"
            android:paddingVertical="115dp"
            android:text="Instructions"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutTitleTextView"


            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>